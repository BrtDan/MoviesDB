    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <!--    Toolbar     -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#444444"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:id="@+id/leftIconLayout"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/list"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/baseline_tune_white_48" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MoviesDB"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_search_white_48" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Movies or Tv Series"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movies"
                    android:layout_marginLeft="10sp"
                    android:textColor="@android:color/white"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_tv_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV Series"
                    android:layout_marginLeft="10sp"
                    android:textColor="@android:color/white" />

