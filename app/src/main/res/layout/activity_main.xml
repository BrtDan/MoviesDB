                    android:id="@+id/radio_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actors"
                    android:layout_marginLeft="10sp"
                    android:textColor="@android:color/white" />

            </RadioGroup>

        </LinearLayout>


